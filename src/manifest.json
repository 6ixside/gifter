{
 "manifest_version": 2,
 "name": "gifter",
 "description": "gifter application as chrome extension using angular",
 "version": "1.0",
 "browser_action": {
 "default_icon": "assets/v2.png",
 "default_popup": "index.html#/create-account"
 },
 "externally_connectable": {
     "ids" : ["*"],
     "matches" : ["*://*.myshopify.com/*"]
 },
 "permissions": ["tabs", "activeTab", "storage"],
 "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
 "web_accessible_resources": [
    "assets/css/*", 
    "assets/js/*", 
    "assets/fonts/*"
 ]

}